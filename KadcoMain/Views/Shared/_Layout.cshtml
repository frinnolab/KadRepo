<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KADCO Portal</title>

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>

    <link href="~/Content/SemanticUI/semantic.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.semanticui.css" rel="stylesheet" />


    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.semanticui.min.js"></script>

</head>
<body>
    <div class="ui menu inverted">
        @Html.ActionLink("KADCO PORTAL", "Index", "Home", new { area = "" }, new { @class = "header item" })
        @*@Html.ActionLink("Abby", "About", "Home", new { @class = "item" })
        @Html.ActionLink("Conny", "Contact", "Home", new { @class = "item" })*@
    </div>

    <div class="ui container grid">
        @RenderBody()
        @*<footer>
            <p>&copy; @DateTime.Now.Year - KADCO PORTAL</p>
        </footer>*@
    </div>

    @Scripts.Render("~/Content/SemanticUI/semantic.min.js")
    @*<script src="~/Scripts/jquery-3.5.1.js"></script>*@
    @*<script src="~/Scripts/jquery.validate.js"></script>*@

    @*<script src="~/Scripts/semantic.min.js"></script>*@


    @RenderSection("scripts", required: false)

</body>
</html>

<style>
    body{
        background:rgba(203, 202, 202, 0.83);
    }
</style>
    